- validate_url ||= 'log_depot_edit'

.form-group{'ng-show' => ng_show}
  %label.col-md-2.control-label
    = _("Username")
  .col-md-8
    %input{:type => "text", 'ng-required' => ng_reqd_userid, :name => "log_userid", 'ng-model' => "#{ng_model}.log_userid", :maxlength => 50, :checkchange => true}

.form-group{'ng-show' => ng_show}
  %label.col-md-2.control-label
    = _("Password")
  .col-md-8
    %input{:type => "password", 'ng-required' => ng_reqd_password, :name => "log_password", 'ng-model' => "#{ng_model}.log_password", :maxlength => 50, :checkchange => true, :verifypasswd => ng_model}

.form-group{'ng-show' => ng_show}
  %label.col-md-2.control-label
    = _("Verify Password")
  .col-md-8
    %input{:type => "password", 'ng-required' => ng_reqd_verify, :name => "log_verify", 'ng-model' => "#{ng_model}.log_verify", :maxlength => 50, :checkchange => true, :verifypasswd => ng_model}
    %br
    #passwd{'ng-show' => "logVerifyCtrl != undefined && logVerifyCtrl.$error.verifypasswd", :style => "color:red;font-size:small"}
      = _('Passwords do not match')


  = render :partial => "layouts/angular/form_buttons_verify_angular",
           :locals  => {:ng_show           => "#{ng_show}",
                        :validate_url      => validate_url,
                        :id                => id,
                        :valtype           => valtype,
                        :basic_info_needed => defined?(basic_info_needed) ? basic_info_needed : nil}
